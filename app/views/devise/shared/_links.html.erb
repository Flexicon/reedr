<div class="mt-12 text-sm">
  <%- if controller_name != 'sessions' %>
    <div>
      <span>Already using Reedr?</span>
      <%= link_to "Log in", new_session_path(resource_name), class: 'button link' %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <span>New to Reedr?</span>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'button link' %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <span>Forgot your password?</span>
      <%= link_to "Get a reset link", new_password_path(resource_name), class: 'button link' %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <span>Didn't receive a confirmation email?</span>
      <%= link_to "Request resend", new_confirmation_path(resource_name), class: 'button link' %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'button link' %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>