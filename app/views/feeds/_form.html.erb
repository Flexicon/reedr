<%= form_with(model: feed, class: "contents") do |form| %>
  <% if feed.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
        <% feed.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless feed.new_record? %>
    <div class="my-5">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-field" %>
    </div>

    <div class="my-5">
      <%= form.label :sub_title, class: 'capitalize' %>
      <%= form.text_field :sub_title, class: "form-field" %>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :url, class: 'uppercase' %>
    <%= form.text_field :url, class: "form-field" %>
  </div>

  <div class="inline">
    <%= form.submit class: "button primary" %>
  </div>
<% end %>
